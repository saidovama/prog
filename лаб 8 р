def calculate_path(V, t):
    # Расчет пути S1 (равномерное движение)
    S1 = V * t

    # Расчет пути S2 (равнозамедленное движение до полной остановки)
    S2 = (V * t) / 2

    # Общий путь
    S = S1 + S2
    return S


# Ввод данных
V = float(input("Введите скорость поезда V (м/с): "))
t = float(input("Введите время t (с): "))


# Вычисление и вывод результата
S = calculate_path(V, t)
print(f"Общий путь S: {S} м")

# Проверка (необязательно)
S_compare = (3 * V * t) / 2
print(f"Сравнительный путь S (для проверки): {S_compare} м")
