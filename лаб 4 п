import math

# Ввод данных
H = float(input("Введите высоту обрыва (H): "))
V = float(input("Введите начальную скорость (V): "))
alpha = float(input("Введите угол α (в градусах): "))
t = float(input("Введите время t: "))
g = 9.81  # Ускорение свободного падения

# Перевод угла из градусов в радианы
alpha_radians = math.radians(alpha)

# Вычисление координат камня в момент времени t
x_t = V * t * math.cos(alpha_radians)
y_t = H + V * t * math.sin(alpha_radians) - 0.5 * g * t**2

# Проверка, упал ли камень на дно обрыва
y_t = max(y_t, 0)  # Если y_t < 0, то камень уже упал

# Вывод результата
print(f"Расстояние до края обрыва x(t): {x_t:.2f} м")
print(f"Высота от дна обрыва y(t): {y_t:.2f} м")
