def calculate_g(h):
    G = 6.672e-11  # Нм²/кг²
    M = 5.96e24    # кг
    R = 6.37e6     # м
    g = (G * M) / ((R + h) * 2)
    return g

h = float(input("Введите высоту h над поверхностью Земли (в метрах): "))


g = calculate_g(h)
print(f"Ускорение свободного падения g на высоте {h} м: {g:.4f} м/с²")
